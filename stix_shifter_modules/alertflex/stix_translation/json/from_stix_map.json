{
  "ipv4-addr": {
    "fields": {
      "src_ip": ["a.srcIp"],
      "dst_ip": ["a.dstIp"],
      "ip": ["a.dstIp", "a.srcIp"]
    }
  },
  "network-traffic": {
    "fields": {
      "src_port": ["a.srcPort"],
      "dst_port": ["a.dstPort"]
    }
  },
  "file": {
    "fields": {
      "name": ["a.fileName"],
      "hashes.SHA-256": ["a.hashSha256"],
      "hashes.SHA-1": ["a.hashSha1"],
      "hashes.MD5": ["a.hashMd5"]
    }
  },
  "process": {
    "fields": {
      "name": ["a.processName"],
      "pid": ["a.processId"]
    }
  },
  "user": {
    "fields": {
      "name": ["a.userName"]
    }
  },
  "host": {
    "fields": {
      "agent": ["a.agentName", "a.srcHostname", "a.dstHostname"]
    }
  },
  "alert" : {
    "fields": {
      "node": ["a.nodeId"],
      "source": ["a.alertSource"],
      "type": ["a.alertType"],
      "id": ["a.eventId"],
      "severity": ["a.alertSeverity"]
    }
  }
}
